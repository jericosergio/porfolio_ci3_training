    RewriteEngine On
    RewriteBase /portfolio/

    # ✅ Serve existing files/folders directly (fixes assets + fonts 404)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # ✅ Otherwise route to CI
    RewriteRule ^(.*)$ index.php/$1 [L]
